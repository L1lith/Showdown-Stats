{
  "name": "showdown-stats",
  "version": "1.0.0",
  "description": "Pokemon Showdown Stats Chrome Extension",
  "main": "index.js",
  "scripts": {
    "build": "webpack --config ./source/webExtension/webpack.config.js",
    "build-firefox": "npm run-script build && cp -R ./build/webExtension ./build/firefoxExtension && cp -R ./source/webExtension/resources/ ./build/firefoxExtension/ && cp -R ./source/core/ ./build/firefoxExtension/ && cp ./package.json ./build/firefoxExtension/package.json && zip -r \"./build/showdownStats-firefox.zip\" ./build/firefoxExtension",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/L1lith/Showdown-Stats.git"
  },
  "keywords": [
    "showdown",
    "stats",
    "pokemon",
    "chrome",
    "extension",
    "javascript"
  ],
  "author": "Lilith",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/L1lith/Showdown-Stats/issues"
  },
  "homepage": "https://github.com/L1lith/Showdown-Stats#readme",
  "dependencies": {
    "pokemon-stat-calculator": "^0.3.0"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^4.5.1",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3",
    "yargs": "^11.0.0"
  }
}
